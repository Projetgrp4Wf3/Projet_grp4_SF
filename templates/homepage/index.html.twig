{% extends 'base.html.twig' %}
{% set title = "Accueil" %}

{% block title %} {{ title }} | {{parent()}} {% endblock %}

{% block body %}
<style>
    #macarte{
        height: 400px;
    }
</style>

<header>

    {# titre de la page d'accueil #}

    <div class="row bg-dark d-flex justify-content-center">
        <h2 class="p-5 text-warning font-weight-bold"><i class="ri-phone-fill"></i> 06.01.02.03.04</h2>
        <h1 class="p-5 text-warning font-weight-bold">Bienvenue sur MLV Auto !</h1>
    </div>
    

    {# Carousel #}

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="{{ asset('build/img/depannage.jpg') }}" class="d-block w-100" alt="Image de dépanneuse">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="text-warning">Besoin d'un dépanneur ?</h5>
                    <p>Faites appelle à nous ! Nous sommes disponible 24h/24 et 7j/7 !</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="{{ asset('build/img/revision.jpg') }}" class="d-block w-100" alt="Image de révision">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="text-warning">Problème mécanique ?</h5>
                    <p>En plus du dépannage de véhicule, nous proposons aussi des prestations de montage pneumatique ainsi que des révisions !</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="{{ asset('build/img/boutique.jpg') }}" class="d-block w-100" alt="Image de boutique">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="text-warning">Accessoire automobile</h5>
                    <p>Venez voir notre selection d'accessoires automobiles !</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</header>


{# Contenu de présentation #}

<div class="main-container">

    <div class="row bg-dark d-flex justify-content-center">
        <h2 class="p-5 text-warning font-weight-bold"><i class="ri-timer-fill"></i>Moins de 30min!</h2>
        <h2 class="p-5 text-warning font-weight-bold"><i class="ri-phone-fill"></i> 06.01.02.03.04</h2>
        <h2 class="p-5 text-warning font-weight-bold">Service de remorquage 7j/7 24h/24</h2>
    </div>

    <div class="row bg-white">
        <div class="col-6 p-5 d-flex flex-column justify-content-center">
            <h3 class="text-center text-warning font-weight-bold">Qui-sommes-nous ?</h3>
            <p class="pl-5 pr-5 mt-5">Lorem ipsum dolor sit amet consectetur adipisicing elit. Natus praesentium est mollitia deserunt ea odio quos fugit accusamus. Ad, sit!</p>
        </div>
        <div class="col-6 p-5 d-flex flex-column justify-content-center">
            <h3 class="text-center text-warning font-weight-bold">Nous contacter: </h3>
            <p class="pl-5 pr-5 mt-5">Lorem ipsum dolor sit amet consectetur adipisicing elit. Doloribus impedit sit maxime dicta. Ad aperiam nam porro repellat dolore tenetur.</p>
        </div>
    </div>

    <div class="bg-white col-12">
        <h2 class="text-center font-weight-bold text-warning mb-3">Trouvez votre garage</h2>
        <div id="macarte"> Ma carte</div>
    </div>
</div>

<script>
        //on charge la page
    window.onload = function(){
    let macarte = L.map("macarte").setView([48.7767, 2.00167], 13)
    L.tileLayer('//{s}.tile.openstreetmap.fr/osmfr/{z}/{x}/{y}.png', {
        attribution: 'données &copy; <a href="//osm.org/copyright">OpenStreetMap</a>/ODbL - rendu <a href="//openstreetmap.fr">OSM France</a>',
        miniZoom: 1,
        maxZoom: 20
    }).addTo(macarte)

    //on active la gestion d'itinéraires
    L.Routing.control({
        waypoints: [
            L.latLng(),
            L.latLng(48.7650, 2.0062),
            nom = "Votre Garage est ici",

        ],
        geocoder: L.Control.Geocoder.nominatim(),
        lineOptions: {
            styles: [{
                color: 'red',
                opacity: 2,
                weight: 7,
            }
        ]
        },

        router: new L.Routing.osrmv1({
            language: 'fr',
        })
    }).addTo(macarte)

    };
</script>
{% endblock %}
